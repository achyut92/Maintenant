<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.self.achyut.maintenant">

    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AfterLogin" />
        <activity
            android:name=".activity.TenantList"
            android:label="Tenant List" />
        <activity
            android:name=".activity.EditLandlord"
            android:label="Edit" />
        <activity
            android:name=".activity.TenantDetails"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ElectricBill"
            android:label="Bill" />
        <activity android:name=".activity.BillHistory"
            android:label="Past Bills"></activity>
    </application>

</manifest>